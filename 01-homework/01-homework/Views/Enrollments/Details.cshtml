@model _01_homework.Models.Enrollment

@{
    ViewData["Title"] = "Enrollment Details";
}

<h1>Enrollment Details</h1>

<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Student
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
        <dt class = "col-sm-2">
            Student Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
        <dt class = "col-sm-2">
            Course
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.Title) (@Html.DisplayFor(model => model.Course.CourseCode))
        </dd>
        <dt class = "col-sm-2">
            Course Department
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.Department)
        </dd>
        <dt class = "col-sm-2">
            Credits
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.Credits)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Grade?.ToString() ?? "No Grade Assigned")
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Student Information</h5>
            </div>
            <div class="card-body">
                <p><strong>Name:</strong> @Model.Student.FullName</p>
                <p><strong>Email:</strong> @Model.Student.Email</p>
                <p><strong>Student Since:</strong> @Model.Student.EnrollmentDate.ToShortDateString()</p>
                <a asp-controller="Students" asp-action="Details" asp-route-id="@Model.StudentId" class="btn btn-info btn-sm">View Student Profile</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Course Information</h5>
            </div>
            <div class="card-body">
                <p><strong>Course:</strong> @Model.Course.Title</p>
                <p><strong>Code:</strong> @Model.Course.CourseCode</p>
                <p><strong>Department:</strong> @Model.Course.Department</p>
                <p><strong>Credits:</strong> @Model.Course.Credits</p>
                @if (!string.IsNullOrEmpty(Model.Course.Description))
                {
                    <p><strong>Description:</strong> @Model.Course.Description</p>
                }
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId" class="btn btn-info btn-sm">View Course Details</a>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.EnrollmentId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div> 